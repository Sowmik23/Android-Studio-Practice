<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/repeat_song_range_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:text="@string/repeat_song_instruction"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColorSecondary" />

    <TextView
        android:id="@+id/repeat_song_range_A_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/repeat_song_range_instructions"
        android:layout_below="@+id/repeat_song_range_instructions"
        android:layout_marginTop="10dp"
        android:text="0:00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColorSecondary" />

    <TextView
        android:id="@+id/repeat_song_range_B_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/repeat_song_range_A_time"
        android:layout_alignRight="@+id/repeat_song_range_instructions"
        android:text="0:00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColorSecondary" />



    <SeekBar
        android:id="@+id/repeat_song_range_placeholder_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repeat_song_range_A_time"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />


</RelativeLayout>